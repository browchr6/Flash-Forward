<!-- Deck name, number of cards-->

<center>

<h1>Deck: {{deck}}</h1>
<h3>Card count: {{cardCount}}</h3>

<!-- button to go back to the home page-->
<form action="/"><input type="submit" value="Back to decks"></form>
<br>
<!-- Test knowledge -->
<form action="/">
    <input type="text" hidden name="deck" value="{{deck}}">
    <input type="submit" name="testKnowledge" value="Test Knowledge!">
</form>
<br>

<!-- Add a card-->
<h3>Add a Card</h3>
<form id="addCard" action="/" method="POST">
    <input type="text" hidden name="deck" value="{{deck}}">
    <input type="number" hidden name="cardCount" value={{cardCount}}>
    <div>
        <label for="question">Question:</label>
        <input class="floatRight" type="text" name="question">
    </div>
    <br>
    <div>
        <label for="answer">Answer:</label>
        <input class="floatRight" type="text" name="answer">
    </div>
    
    <br>
    <input type="submit" name="addCard" value="Add Card">
</form>

<!-- View cards and delete certain cards if they want to-->
<h3>Cards In This Deck</h3>
{{#if cards}}
<table id="deckTable" deckName="{{deck}}">
    <thead>
        <tr>
            <th>Question</th>
            <th>Answer</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        {{#each cards}}
            <tr>
                <td hidden><input type="number" name='id' value={{this.id}}></td>
                <td hidden><input type="text" name='username' value={{this.username}}></td>
                <td><input type="text" disabled=disabled name='question' value="{{this.question}}"></td>
                <td><input type="text" disabled=disabled name='answer' value="{{this.answer}}"></td>                
                <td hidden><input type="number" disabled=disabled name='review_count' value={{this.review_count}}></td>
                <td hidden><input type="number" disabled=disabled name='correct_count' value={{this.correct_count}}></td>
                <td><input type="submit" name="edit" value="Edit"></td>
                <td><input type="submit" name="delete" value="Delete"></td>
            </tr>
        {{/each}}
    </tbody>
</table>
{{/if}}

</center>

<script src="client_script_deck.js"></script>
<link rel="stylesheet" href="client_style_deck.css">